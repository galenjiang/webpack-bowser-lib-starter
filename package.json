{
  "name": "webpack-browser-lib-starter",
  "version": "0.0.1",
  "description": "",
  "main": "lib/index.js",
  "scripts": {
    "dev": "webpack-dev-server --config ./build/webpack.dev.conf.js",
    "build": "webpack --config ./build/webpack.build.conf.js",
    "dev-build": "cross-env NODE_ENV=development npm run build",
